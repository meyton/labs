<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Testing.AddNewClassPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Dodaj nową klasę"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="entryName" Placeholder="Wprowadź nazwę klasy..." />
            <Entry x:Name="entryTeacher" Placeholder="Wpisz nauczyciela..." />
            <Button Margin="40" Text="Dodaj do bazy" Clicked="btnAdd_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>