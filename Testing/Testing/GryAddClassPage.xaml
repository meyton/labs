<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Testing.GryAddClassPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Dodajesz nową klasę"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="entryName" Placeholder="Wpisz nazwę klasy..." />
            <Entry x:Name="entryTeacher" Placeholder="Wpisz nauczyciela..." />
            <Button Text="Zapisz w bazie" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>