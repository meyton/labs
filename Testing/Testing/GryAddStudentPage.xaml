<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Testing.GryAddStudentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Dodajesz nowego studenta"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="entryFirstName" Placeholder="Wpisz imię..." />
            <Entry x:Name="entryLastName" Placeholder="Wpisz nazwisko..." />
            <Entry x:Name="entryGrade" Placeholder="Wpisz ocenę..." />
            <Button Text="Zapisz w bazie" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>